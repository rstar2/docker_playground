    "version": "0.2.0",
    "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "ElasticSearch-Books-AppClient",
      "cwd": "${workspaceFolder}/elasticsearch-books/app",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "port": 9229,
      "env": {
        "ELASTICSEARCH_URL": "http://192.168.99.100:8080/elasticsearch",
        "ELASTICSEARCH_INDEX_NAME": "pages"
      }
    },
        {
            "type": "node",
            "request": "launch",
            "name": "File",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "envFile": "${fileDirname}/.env"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-i"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "outFiles": [
                "${workspaceRoot}/dist/**/*"
            ],
            // "envFile": "${workspaceRoot}/.env"
        }
    ]
}
